<!DOCTYPE html>
<html lang="en">
<head>
    <title>SF Travel Guide | Restaurants</title>
    <link rel="icon" type="image/png" href="/images/icon.svg">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="restaurant-container">
        <% restaurantData.forEach(restaurant => { %>
            <div class="restaurant-item" data-id="<%= restaurant.id %>">
                <img src="<%= restaurant.photo %>" alt="<%= restaurant.name %>">
                <p class="restaurant-name"><%= restaurant.name %></p>
                <p class="restaurant-address"><%= restaurant.address %><br><%= restaurant.phone %></p>
                <!-- Add delete button -->
                <button class="delete-btn">X</button>
            </div>
        <% }) %>
    </div>
    <script src="/scripts/header.js"></script>
    <script src="/scripts/restaurantCards.js"></script>
</body>
</html>
